{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "include": ["src"]
}
